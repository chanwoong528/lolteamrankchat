<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">

      <nav aria-label="breadcrumb">
        <ol class="breadcrumb p-1 pl-2 pr-2">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/trades">Trade</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= trade.title %></li>
        </ol>
      </nav>

      <div class="card">
        <h5 class="card-header p-2"><%= trade.title %></h5>
        <div class="row">

          <div class="col-md-7 col-lg-8 col-xl-9 order-sm-2 order-md-1">
            <div class="trade-body p-2"><%= trade.body %></div>
          </div>

          <div class="col-md-5 col-lg-4 col-xl-3 order-sm-1 order-md-2">
              <div class="trade-info card m-2 p-2">
             <div class="border-bottom pb-1 mb-1"> <!-- 1 -->
               <span>Author</span> : <%= trade.author ? trade.author.username : "" %>
             </div>
             <div><span>Created</span> : <span data-date-time="<%= trade.createdAt %>"><%= trade.createdAt %></span></div>
             <% if(trade.updatedAt) { %>
               <div><span>Updated</span> : <span data-date-time="<%= trade.updatedAt %>"><%= trade.updatedAt %></span></div>
             <% } %>
           </div>
          </div>

        </div>
      </div>

      <div class="mt-3">
        <a class="btn btn-primary" href="/trades">Back</a>
        <% if(isAuthenticated && trade.author && currentUser.id == trade.author.id){ %> <!-- 1 -->
          <a class="btn btn-primary" href="/trades/<%= trade._id %>/edit">Edit</a>
          <form action="/trades/<%= trade._id %>?_method=delete" method="post" class="d-inline">
            <a class="btn btn-primary" href="#" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
          </form>
        <% } %>
      </div>

      <div>
             <% if(isAuthenticated && currentUser.id == trade.username){ %> <!-- 1 -->
               <a class="btn btn-primary" href="/users/<%= user.username %>/edit">Edit</a>
             <% } %>
           </div>
    </div>
  </body>
</html>
