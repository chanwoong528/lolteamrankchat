<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">

      <h2 class="mb-3">Make Trades</h2>

      <table class="board-table table table-sm border-bottom">

        <thead class="thead-light">
          <tr>
            <th scope="col" width = 50> Title </th>
            <th scope="col" class="author"> Author </th> <!-- 1 -->
            <th scope="col" class="date"> Date </th>
          </tr>
        </thead>

        <tbody>
          <% if(trades == null || trades.length == 0){ %>
            <tr>
              <td colspan=100> There is no data to show :( </td>
            </tr>
          <% } %>
          <% trades.forEach(function(trade) { %>
            <tr>
              <td>
                <a href="/trades/<%= trade._id %>"><div class="ellipsis"><%= trade.title %></div></a>
              </td>
              <td class="author"> <!-- 2 -->
                <div class="ellipsis"><%= trade.author ? trade.author.username : "" %></div>
              </td>
              <td class="date">
                <span data-date="<%= trade.createdAt %>"><%= trade.createdAt %></span>
              </td>
            </tr>
          <% }) %>
        </tbody>

      </table>
      <div>
          <% if(isAuthenticated){ %> <!-- 1 -->
            <a class="btn btn-primary" href="/trades/new">New</a>
          <% } %>
        </div>
    </div>
  </body>
</html>
