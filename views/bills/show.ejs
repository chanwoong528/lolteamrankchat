<!DOCTYPE html>
<html>

<head>
  <%- include('../partials/head') %>
</head>

<body>
  <%- include('../partials/nav') %>

  <div class="container mb-3">

    <nav aria-label="breadcrumb">
      <ol class="breadcrumb p-1 pl-2 pr-2">
        <li class="breadcrumb-item"><a href="/">홈</a></li>
        <li class="breadcrumb-item"><a href="/bills/user">고지서</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= bill.title %></li>
      </ol>
    </nav>

    <div class="card">
      <h5 class="card-header p-2"><%= bill.title %></h5>
      <div class="row">

        <div class="col-md-7 col-lg-8 col-xl-9 order-sm-2 order-md-1">
          <% if(bill.attachment) { %>
          <div class="ml-2">
            <!-- 1 --> <small>📁 Attachment: <a
                href="/files/<%= bill.attachment.serverFileName %>/<%= bill.attachment.originalFileName %>"><%= bill.attachment.originalFileName %></a>
              (<%= bill.attachment.bytesConversion() %>)</small>
            <br>
            <img src="/files/<%= bill.attachment.serverFileName %>/<%= bill.attachment.originalFileName %>">

          </div>
          <% } %>
        </div>

        <div class="col-md-7 col-lg-8 col-xl-9 order-sm-2 order-md-1">
          <div class="post-body p-2">
            <%= bill.body %>
          </div>
        </div>

        <div class="col-md-5 col-lg-4 col-xl-3 order-sm-1 order-md-2">
          <div class="post-info card m-2 p-2">
            <div class="border-bottom pb-1 mb-1">
              <span>글쓴이</span> : <%= bill.author ? bill.author : "" %>
            </div>
            <div><span>작성일</span> :
              <span data-date-time="<%= bill.createdAt %>"><%= bill.createdAt %>
              </span>
            </div>
            <% if(bill.updatedAt) { %>
            <div><span>수정일</span> :
              <span data-date-time="<%= bill.updatedAt %>"><%= bill.updatedAt %>
              </span>
            </div>
            <% } %>

          </div>
        </div>

      </div>
    </div>
    <div class="mt-3">
      <a class="btn btn-primary" href="/bills/user">뒤로가기</a>
    </div>
  </div>
  <%- include('../partials/footer') %>
</body>

</html>