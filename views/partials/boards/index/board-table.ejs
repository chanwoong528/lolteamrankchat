<table class="board-table table table-sm border-bottom">

  <thead class="thead-light">
    <tr>
      <th scope="col" width=50> 제목 </th>
      <th scope="col" class="author"> 작성자 </th>
      <th scope="col" class="date"> 작성일 </th>
    </tr>
  </thead>

  <tbody>
    <% if(posts == null || posts.length == 0){ %>
    <tr>
      <td colspan=100> 아직 포스트가 없어요:( </td>
    </tr>
    <% } %>
    <% posts.forEach(function(post) { %>
    <tr>
      <td>
        <a href="/boards/<%= boardName + '/' + post._id %>">
          <div class="ellipsis"><%= post.title %></div>
        </a>
        <div class="ellipsis">좋아요 : <%= post.likes %></div>

      </td>
      <td class="author">
        <!-- 2 -->
        <div class="ellipsis"><%= post.author ? post.author.name : "" %></div>
      </td>
      <td class="date">
        <span data-date="<%= post.createdAt %>"><%= post.createdAt %></span>
      </td>
    </tr>
    <% }) %>
  </tbody>

</table>
