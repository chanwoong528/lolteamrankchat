<table class="board-table table table-sm border-bottom">

  <thead class="thead-light">
    <tr>
      <th scope="col" class="title"> 제목 </th>
      <th scope="col" class="views"> <i class="fa fa-eye" style="font-size:12px"></i> </th>
      <th scope="col" class="author"> 작성자 </th>
      <th scope="col" class="date"> 작성일 </th>
      <th scope="col" class="likes"> <i class='far fa-thumbs-up' style='font-size:12px'></i> </th>
    </tr>
  </thead>

  <tbody>
    <% if(posts == null || posts.length == 0){ %>
    <tr>
      <td colspan=100> 아직 포스트가 없어요:( </td>
    </tr>
    <% } %>
    <% posts.forEach(function(post) { %>
    <tr>
      <td>
        <div class="ellipsis">
        <a href="/boards/<%= boardName + '/' + post._id %>" style="color:#000000"><%= post.title %></a>
        <font style="color:#ff6600">[<%= post.comments %>]</font>
        </div>
      </td>
      <td>
        <div style="text-align:center"><%= post.views %></div>
      </td>
      <td class="author">
        <!-- 2 -->
        <div class="ellipsis"><%= post.author ? post.author.nickname : "" %></div>
      </td>
      <td class="date">
        <span data-date="<%= post.createdAt %>"><%= post.createdAt %></span>
      </td>
      <td class="likes">
        <div class="ellipsis"><%= post.likes %></div>
      </td>
    </tr>
    <% }) %>
  </tbody>

</table>
