<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">

      <h3 class="mb-3">Users</h3>

<table class="board-table table table-sm border-bottom">
<thead class="thead-light">
  <tr>
    <th scope="col" class = "username"> 아이디 </th>
    <th scope="col" class = "name" > 이름 </th>
    <th scope="col" class = "verified"> 인증 </th>
    <th scope="col" class = "del"> 지우기 </th>
    <th scope="col" class = "addr"> 주소 </th>
  </tr>
</thead>
      <tbody>
        <% if(users == null || users.length == 0){ %>
          <tr>
          <td> There is no user yet.</td>
          </tr>
        <% } %>
        <% users.forEach(function(user) { %>
          <tr>
            <td class= "username">
              <div class="ellipsis">
                <%= user.username %>
              </div>

            </td>
            <td class="name">
              <div class="ellipsis">
              <%= user.name %>
                </div>
            </td>

      <form action="/users/verified/<%= user.username %>?_method=put" method="post">

            <td class="verified" >
              <div class="ellipsis">
                <a class="btn btn-primary <%= user.verified?'disabled':'' %>" href = "/users/verified/<%=user.username%>">   승인 </a>
                </div>
              </td>
      </form>


          <form action="/users/delete<%= user.username %>?_method = delete" method="post">
              <td class="del" >
                <div class="ellipsis">
              <a class="btn btn-primary" href="/users/delete/<%=user.username%>" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">지우기</a>
            </div>
          </td>
          </form>









            <td class= "addr">
              <div class="ellipsis"><%= user.addr %>
              </div>
            </td>
          </tr>

        <% }) %>
      </tbody>
</table>
    </div>
  </body>
</html>
